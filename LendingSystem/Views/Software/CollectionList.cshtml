<h2>Collection List</h2>

<div>
    <h4>List of all payments</h4>
    <hr />

    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/Software" class="btn btn-default">Back</a>
            <button class="btn btn-primary" onclick="buttonClickAddCreate()">Create</button>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tabActivity">Payments (Loan Transactions)</a></li>
    </ul>

    <br />

    <div class="tab-content">
        <div id="tabActivity" class="tab-pane fade in active">
            <div class="row">
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Filters
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label>Date Start</label>
                                <div id="wijmoInputDateStartDate"></div>
                            </div>
                            <div class="form-group">
                                <label>Date End</label>
                                <div id="wijmoInputDateEndDate"></div>
                            </div>
                            <div class="form-group">
                                <label>Filter</label>
                                <input class="form-control" id="filterText" placeholder="Filter text" />
                            </div>
                        </div>
                        <div class="panel-footer">
                            <button class="btn btn-success btn-block" onclick="buttonGetData()">Refresh (Get Data)</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div id="wijmoGridCollectionList"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fae" id="modalCollectionDetailForm" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Collection Detail</h4>
            </div>
            <div class="modal-body">

                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tabCollectionDetails">Collection Details</a></li>
                    <li><a data-toggle="tab" href="#tabPaymentMethod">Payment Method</a></li>
                </ul>

                <br />

                <div class="tab-content">
                    <div id="tabCollectionDetails" class="tab-pane fade in active">
                        <form>
                            <div class="form-group">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <label>Collection Date:</label>
                                            <div id="wijmoComboboxCollectionDate"></div>
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%"></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="form-group">
                                <label>Customer:</label>
                                <div id="wijmoComboboxCustomer"></div>
                            </div>
                            <div class="form-group">
                                <label>Loan Number:</label>
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <div id="wijmoComboboxLoanNumber"></div>
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%">
                                            <input id="inputBalalnceAmount" class="form-control text-right number" readonly />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="form-group">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <label>Paid Amount:</label>
                                            <input id="inputPaidAmount" class="form-control text-right number" />
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%">
                                            <label>Penalty Amount:</label>
                                            <input id="inputPenaltyAmount" class="form-control text-right number" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="form-group">
                                <label>Remarks</label>
                                <textarea id="inputRemarks" class="form-control" rows="7"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Collector / Pay to:</label>
                                <div id="wijmoComboboxCollector"></div>
                            </div>
                        </form>
                    </div>
                    <div id="tabPaymentMethod" class="tab-pane fade">
                        <form>
                            <div class="form-group">
                                <label>Pay Type:</label>
                                <div id="wijmoComboboxPayType"></div>
                            </div>
                            <div class="form-group">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <label>Paymaya Account Number:</label>
                                            <input id="inputPaymayaAccountNumber" class="form-control" />
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%">
                                            <label>GCash Account Number:</label>
                                            <input id="inputGCashAccountNumber" class="form-control" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <hr />
                            <div class="form-group">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <label>Credit Card Number:</label>
                                            <input id="inputCreditCardNumber" class="form-control" />
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%">
                                            <label>Credit Card Name:</label>
                                            <input id="inputCreditCardName" class="form-control" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <hr />
                            <div class="form-group">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 49%">
                                            <label>Check Number:</label>
                                            <input id="inputCheckNumber" class="form-control" />
                                        </td>
                                        <td style="width: 2%"></td>
                                        <td style="width: 49%">
                                            <label>Check Date:</label>
                                            <div id="wijmoInputDateCheckDate"></div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="form-group">
                                <label>Check Bank:</label>
