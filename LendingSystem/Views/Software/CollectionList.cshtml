</div>

<div class="modal fae" id="modalCollectionDeleteForm" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Delete Collection</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this collection?
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" onclick="buttonClickConfirmDeleteCollection()">Delete</button>
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var wijmoInputDateStartDate;
    var wijmoInputDateEndDate;

    var wijmoCollectionViewCollectionList;
    var wijmoGridCollectionList;

    var collectionId = 0;
    var wijmoComboboxCollectionDate;
    var wijmoComboboxCustomer;
    var isCustomerSelected = false;
    var wijmoComboboxLoanNumber;
    var wijmoComboboxPayType;
    var wijmoComboboxCollector;
    var wijmoInputDateCheckDate;

    function getDataCollectionList() {
        var collectionListObservableArray = new wijmo.collections.ObservableArray;

        var startDate = wijmoInputDateStartDate.value.toLocaleDateString().replace(/\//g, '-');
        var endDate = wijmoInputDateEndDate.value.toLocaleDateString().replace(/\//g, '-');
        var filterText = document.getElementById("filterText").value;

        $.ajax({
            url: "/api/collection/list/" + startDate + "/" + endDate + "?filterText=" + filterText,
            cache: false,
            type: "GET",
            contentType: "application/json; charset=utf-8",
            success: function (results) {
                if (results.length > 0) {
                    for (var i = 0; i < results.length; i++) {
                        collectionListObservableArray.push({
                            ButtonEidt: "<button class='btn btn-primary btn-xs btn-block' onclick='buttonClickEdit()'>Edit</button>",
                            ButtonDelete: "<button class='btn btn-danger btn-xs btn-block' onclick='buttonClickDelete()'>Delete</button>",
                            Id: results[i]["Id"],
                            CollectionNumber: results[i]["CollectionNumber"],
                            CollectionDate: results[i]["CollectionDate"],
                            CustomerId: results[i]["CustomerId"],
                            Customer: results[i]["Customer"],
                            LoanId: results[i]["LoanId"],
                            LoanNumber: results[i]["LoanNumber"],
                            PayTypeId: results[i]["PayTypeId"],
                            PayType: results[i]["PayType"],
                            PaymayaAccountNumber: results[i]["PaymayaAccountNumber"],
                            GCashAccountNumber: results[i]["GCashAccountNumber"],
                            CreditCardNumber: results[i]["CreditCardNumber"],
                            CheckNumber: results[i]["CheckNumber"],
                            CheckDate: results[i]["CheckDate"],
                            CheckBank: results[i]["CheckBank"],
                            CheckBank: results[i]["CheckBank"],
                            PaidAmount: results[i]["PaidAmount"],
                            PaidAmountDisplay: parseFloat(results[i]["PaidAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                            PenaltyAmount: results[i]["PenaltyAmount"],
                            PenaltyAmountDisplay: parseFloat(results[i]["PenaltyAmount"]).toFixed(2).toLocaleString().replace(/\B(?=(\d{3})+(?!\d))/g, ","),
                            Remarks: results[i]["Remarks"],
                            CollectorId: results[i]["CollectorId"],
                            Collector: results[i]["Collector"],
                            Status: results[i]["Status"],
                            IsLocked: results[i]["IsLocked"],
                        });
                    }
                }
            }
        });

        return collectionListObservableArray;
    }

    function createWijmoGridCollectionList() {
        wijmoCollectionViewCollectionList = new wijmo.collections.CollectionView(getDataCollectionList());
        wijmoCollectionViewCollectionList.canFilter = true;

        wijmoGridCollectionList = new wijmo.grid.FlexGrid("#wijmoGridCollectionList");
        wijmoGridCollectionList.initialize({
            columns: [
                {
                    "header": "Edit",
                    "binding": "ButtonEidt",
                    "width": 70,
                    "align": "center",
                    "allowResizing": false,
                    "allowSorting": false,
                    "isContentHtml": true
                },
                {
                    "header": "Delete",
                    "binding": "ButtonDelete",
                    "width": 70,
                    "align": "center",
                    "allowResizing": false,
                    "allowSorting": false,
                    "isContentHtml": true
                },
                {
                    "header": "Col. No.",
                    "binding": "CollectionNumber",
                    "allowSorting": true,
                    "width": 100
                },
                {
                    "header": "Date",
                    "binding": "CollectionDate",
                    "allowSorting": true,
                    "width": 90
                },
                {
                    "header": "Customer",
                    "binding": "Customer",
                    "allowSorting": true,
                    "width": 200
                },
                {
                    "header": "Loan No.",
                    "binding": "LoanNumber",
                    "allowSorting": true,
                    "width": 100
                },
                {
                    "header": "Pay Type",
                    "binding": "PayType",
                    "allowSorting": true,
                    "width": 100
                },
                {
                    "header": "Paid",
                    "binding": "PaidAmountDisplay",
                    "allowSorting": true,
                    "align": "right",
                    "width": 100
                },
                {
                    "header": "Penalty",
                    "binding": "PenaltyAmountDisplay",
                    "allowSorting": true,
                    "align": "right",
                    "width": 100
                },
                {
                    "header": "Remarks",
                    "binding": "Remarks",
                    "allowSorting": true,
                    "width": 200
                }
            ],
            autoGenerateColumns: false,
            itemsSource: wijmoCollectionViewCollectionList,
            isReadOnly: true,
            autoSizeMode: wijmo.grid.AutoSizeMode.Both,
            allowDragging: wijmo.grid.AllowDragging.None,
            selectionMode: wijmo.grid.SelectionMode.Row,
            frozenColumns: 2
        });
    }

    function buttonClickEdit() {
        document.getElementById("modalTitle").innerHTML = "Edit Collection";

        $("#modalCollectionDetailForm").modal({
            show: true,
            backdrop: "static"
        });

        wijmoCollectionViewCollectionList.editItem(wijmoCollectionViewCollectionList.currentItem);
        var currentCollection = wijmoCollectionViewCollectionList.currentEditItem;

        collectionId = currentCollection.Id;
        createWijmoComboboxCustomer(currentCollection.CustomerId, currentCollection.LoanId, currentCollection.PayTypeId, currentCollection.CollectorId);
        document.getElementById("inputPaidAmount").value = formatDecimalValues(currentCollection.PaidAmount);
        document.getElementById("inputPenaltyAmount").value = formatDecimalValues(currentCollection.PenaltyAmount);
        document.getElementById("inputRemarks").value = currentCollection.Remarks;
    }

    function buttonClickAddCreate() {
        document.getElementById("modalTitle").innerHTML = "Create Collection";

        $("#modalCollectionDetailForm").modal({
            show: true,
            backdrop: "static"
        });

        collectionId = 0;
        createWijmoComboboxCustomer(0, 0, 0, 0);
        document.getElementById("inputPaidAmount").value = formatDecimalValues(0);
        document.getElementById("inputPenaltyAmount").value = formatDecimalValues(0);
        document.getElementById("inputRemarks").value = "";
    }

    function buttonClickDelete() {
        $("#modalCollectionDeleteForm").modal({
            show: true,
            backdrop: "static"
        });
    }

    function buttonClickConfirmDeleteCollection() {
        wijmoCollectionViewCollectionList.editItem(wijmoCollectionViewCollectionList.currentItem);
        var id = wijmoCollectionViewCollectionList.currentEditItem.Id;

        $.ajax({
            url: "/api/collection/delete/" + id,
            type: "DELETE",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            statusCode: {
                200: function () {
                    buttonGetData();

                    $("#modalCollectionDeleteForm").modal("hide");
                    toastr.success("Delete Successful");
                },
                404: function (message) {
                    toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404 - Not Found");
                },
                400: function (message) {
                    toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400 - Bad Request");
                },
                500: function (message) {
                    toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500 - Internal Server Error");
                }
            }
        });
    }

    function buttonClickCreateCollection() {
        var collectionObject = new Object();
        collectionObject.CollectionDate = wijmoComboboxCollectionDate.value.toLocaleDateString();
        collectionObject.CustomerId = wijmoComboboxCustomer.selectedValue;
        collectionObject.LoanId = wijmoComboboxLoanNumber.selectedValue;
        collectionObject.PayTypeId = wijmoComboboxPayType.selectedValue;
        collectionObject.PaymayaAccountNumber = document.getElementById("inputPaymayaAccountNumber").value;
        collectionObject.GCashAccountNumber = document.getElementById("inputGCashAccountNumber").value;
        collectionObject.CreditCardNumber = document.getElementById("inputCreditCardNumber").value;
        collectionObject.CreditCardName = document.getElementById("inputCreditCardName").value;
        collectionObject.CheckNumber = document.getElementById("inputCheckNumber").value;
        collectionObject.CheckDate = wijmoInputDateCheckDate.value.toLocaleDateString();
        collectionObject.CheckBank = document.getElementById("inputCheckBank").value;
        collectionObject.PaidAmount = document.getElementById("inputPaidAmount").value;
        collectionObject.PenaltyAmount = document.getElementById("inputPenaltyAmount").value;
        collectionObject.CollectorId = wijmoComboboxCollector.selectedValue;
        collectionObject.Remarks = document.getElementById("inputRemarks").value;
        var collectionData = JSON.stringify(collectionObject);

        if (collectionId == 0) {
            $.ajax({
                url: "/api/collection/add",
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: collectionData,
                statusCode: {
                    200: function (id) {
                        $("#modalCollectionDetailForm").modal("hide");
                        toastr.success("Create Successful");

                        buttonGetData();
                    },
                    404: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404 - Not Found");
                    },
                    400: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400 - Bad Request");
                    },
                    500: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500 - Internal Server Error");
                    }
                }
            });
        } else {
            $.ajax({
                url: "/api/collection/update/" + collectionId,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: collectionData,
                statusCode: {
                    200: function (id) {
                        $("#modalCollectionDetailForm").modal("hide");
                        toastr.success("Update Successful");

                        buttonGetData();
                    },
                    404: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 404 - Not Found");
                    },
                    400: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 400 - Bad Request");
                    },
                    500: function (message) {
                        toastr.error(message.responseText.replace(/^"(.*)"$/, '$1'), "Error 500 - Internal Server Error");
                    }
                }
            });
        }
    }

    function createWijmoComboboxCustomer(customerId, loanId, payTypeId, collectorId) {
        var customerObservableArray = new wijmo.collections.ObservableArray();
        $.ajax({
            url: '/api/collection/dropdown/list/customer',
            cache: false,
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            success: function (results) {
                if (results.length > 0) {
                    for (i = 0; i < results.length; i++) {
                        customerObservableArray.push({
                            Id: results[i]["Id"],
                            FullName: results[i]["FullName"]
                        });
                    }
                }

                wijmoComboboxCustomer.dispose();
                wijmoComboboxCustomer = new wijmo.input.ComboBox('#wijmoComboboxCustomer', {
                    itemsSource: customerObservableArray,
                    displayMemberPath: "FullName",
                    selectedValuePath: "Id",
                    selectedValue: customerId,
                    onSelectedIndexChanged: function () {
                        createWijmoComboboxLoanNumber(loanId, payTypeId, collectorId);
                        isCustomerSelected = true;
                    }
                });

                createWijmoComboboxLoanNumber(loanId, payTypeId, collectorId);
            }
        });
    }

    function createWijmoComboboxLoanNumber(loanId, payTypeId, collectorId) {
        if (wijmoComboboxCustomer.selectedValue != null) {
            var customerId = wijmoComboboxCustomer.selectedValue;

            var loanNumberObservableArray = new wijmo.collections.ObservableArray();
            $.ajax({
                url: '/api/collection/dropdown/list/loanNumber/' + customerId,
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (results) {
                    var isDisabled = true;

                    if (results.length > 0) {
                        for (i = 0; i < results.length; i++) {
                            loanNumberObservableArray.push({
                                Id: results[i]["Id"],
                                LoanNumber: results[i]["LoanNumber"] + " - (" + results[i]["LoanDate"] + ")",
                                BalanceAmount: results[i]["BalanceAmount"]
                            });
                        }

                        isDisabled = false;
                    }

                    wijmoComboboxLoanNumber.dispose();
                    wijmoComboboxLoanNumber = new wijmo.input.ComboBox('#wijmoComboboxLoanNumber', {
                        disabled: isDisabled,
                        itemsSource: loanNumberObservableArray,
                        displayMemberPath: "LoanNumber",
                        selectedValuePath: "Id",
                        selectedValue: loanId,
                        onSelectedIndexChanged: function () {
                            if (this.selectedValue != null) {
                                document.getElementById("inputBalalnceAmount").value = formatDecimalValues(this.selectedItem["BalanceAmount"]);
                            } else {
                                document.getElementById("inputBalalnceAmount").value = formatDecimalValues(0);
                            }
                        }
                    });

                    if (wijmoComboboxLoanNumber.selectedValue != null) {
                        document.getElementById("inputBalalnceAmount").value = formatDecimalValues(wijmoComboboxLoanNumber.selectedItem["BalanceAmount"]);
                    } else {
                        document.getElementById("inputBalalnceAmount").value = formatDecimalValues(0);
                    }

                    if (isCustomerSelected == false) {
                        createWijmoComboboxPayType(payTypeId, collectorId);
                    }
                }
            });
        } else {
            wijmoComboboxLoanNumber.dispose();
            wijmoComboboxLoanNumber = new wijmo.input.ComboBox('#wijmoComboboxLoanNumber', {
                disabled: true,
                itemsSource: loanNumberObservableArray,
                displayMemberPath: "LoanNumber",
                selectedValuePath: "Id"
            });

            document.getElementById("inputBalalnceAmount").value = formatDecimalValues(0);

            if (isCustomerSelected == false) {
                createWijmoComboboxPayType(payTypeId, collectorId);
            }
        }
    }

    function createWijmoComboboxPayType(payTypeId, collectorId) {
        var payTypeObservableArray = new wijmo.collections.ObservableArray();
        $.ajax({
            url: '/api/collection/dropdown/list/payType',
            cache: false,
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            success: function (results) {
                if (results.length > 0) {
                    for (i = 0; i < results.length; i++) {
                        payTypeObservableArray.push({
                            Id: results[i]["Id"],
                            PayType: results[i]["PayType"]
                        });
                    }
                }

                wijmoComboboxPayType.dispose();
                wijmoComboboxPayType = new wijmo.input.ComboBox('#wijmoComboboxPayType', {
                    itemsSource: payTypeObservableArray,
                    displayMemberPath: "PayType",
                    selectedValuePath: "Id",
                    selectedValue: payTypeId
                });

                createWijmoComboboxCollector(collectorId);
            }
        });
    }

    function createWijmoComboboxCollector(collectorId) {
        var collectorObservableArray = new wijmo.collections.ObservableArray();
        $.ajax({
            url: '/api/collection/dropdown/list/collector',
            cache: false,
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            success: function (results) {
                if (results.length > 0) {
                    for (i = 0; i < results.length; i++) {
                        collectorObservableArray.push({
                            Id: results[i]["Id"],
                            Collector: results[i]["Collector"]
                        });
                    }
                }

                wijmoComboboxCollector.dispose();
                wijmoComboboxCollector = new wijmo.input.ComboBox('#wijmoComboboxCollector', {
                    itemsSource: collectorObservableArray,
                    displayMemberPath: "Collector",
                    selectedValuePath: "Id",
                    selectedValue: collectorId
                });
            }
        });
    }

    function buttonGetData() {
        wijmoCollectionViewCollectionList = new wijmo.collections.CollectionView(getDataCollectionList());
        wijmoCollectionViewCollectionList.canFilter = true;
        wijmoGridCollectionList.itemsSource = wijmoCollectionViewCollectionList;
    }

    window.onload = function () {
        var date = new Date();

        wijmoComboboxCollectionDate = new wijmo.input.InputDate('#wijmoComboboxCollectionDate', {
            format: 'MM-dd-yyyy',
            value: date
        });

        wijmoInputDateStartDate = new wijmo.input.InputDate('#wijmoInputDateStartDate', {
            format: 'MM-dd-yyyy',
            value: new Date(date.getFullYear(), date.getMonth(), 1)
        });

        wijmoInputDateEndDate = new wijmo.input.InputDate('#wijmoInputDateEndDate', {
            format: 'MM-dd-yyyy',
            value: new Date(date.getFullYear(), date.getMonth() + 1, 0)
        });

        createWijmoGridCollectionList();
        wijmoComboboxCustomer = new wijmo.input.ComboBox('#wijmoComboboxCustomer');
        wijmoComboboxLoanNumber = new wijmo.input.ComboBox('#wijmoComboboxLoanNumber');
        wijmoComboboxPayType = new wijmo.input.ComboBox('#wijmoComboboxPayType');
        wijmoComboboxCollector = new wijmo.input.ComboBox('#wijmoComboboxCollector');

        wijmoInputDateCheckDate = new wijmo.input.InputDate('#wijmoInputDateCheckDate', {
            format: 'MM-dd-yyyy',
            value: date
        });
    }
</script>
